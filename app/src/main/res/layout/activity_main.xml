<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="414dp"
        android:layout_height="274dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sest02" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:onClick="NextPage1"
            android:text="ข้อมูลนักศึกษา"
            android:textSize="18dp"
            android:backgroundTint="#FFA500"
            android:translationY="20dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_person"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:onClick="NextPage2"
            android:text="ข้อมูลรายวิชา"
            android:textSize="18dp"
            android:backgroundTint="#FFA500"
            android:translationY="45dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_menu_book"
            />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="เกี่ยวกับ"
            android:textSize="18dp"
            android:backgroundTint="#FFA500"
            android:translationY="70dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textSize="15dp"
        android:translationY="170dp"
        />
</LinearLayout>
