<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/circuit2"
    tools:context=".MainInformation">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="280dp"
        android:scaleType="fitCenter"
/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/btn01"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#66FFFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:onClick="NextPage1"
            android:padding="10dp"
            android:text="ข้อมูลนักศึกษา"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:translationY="5dp" />

        <Button
            android:id="@+id/btn02"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#66FFFF"
            android:drawableLeft="@drawable/ic_baseline_menu_book_24"
            android:onClick="NextPage2"
            android:padding="10dp"
            android:text="ข้อมูลรายวิชา"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <Button
            android:id="@+id/buttonSend0"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#66FFFF"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:padding="10dp"
            android:text="เกี่ยวกับ"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#66FFFF"
            android:drawableLeft="@drawable/ic_baseline_logout_24"
            android:onClick="backPage3"
            android:padding="10dp"
            android:text="ล็อกเอ้าท์"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textSize="15dp"
        android:translationY="160dp"
        />
</LinearLayout>
